<div class="clearfix top-space small"></div>
<div class="row">

  <%= render :partial => 'shared/left_nav' %>

  <div class="panel panel-default col-md-8 text-left">
    <div class="pull-left">
      <h4>Tweets</h4>
    </div>
    <div class="clearfix"></div>
    <hr />
    <ol class="list-unstyled">
      <% @tweets.each do |tweet| -%>
      <li>
        <%= content_tag :strong, tweet.user.name, :class => 'pull-left text-middle' %>
        <%= content_tag :small, "@"+tweet.user.username, :class => 'text-muted pad-10 text-middle' %>
        <%= content_tag :small, tweet.created_at.strftime("%b %-d"), :class => 'text-muted text-middle pull-right' %>
        <div class="clearfix"></div>
        <%= content_tag :p, tweet.content %>
      </li>
      <li><hr></li>
      <% end -%>
    </ol>
  </div>
</div>

